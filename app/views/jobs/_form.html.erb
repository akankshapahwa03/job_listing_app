<%= form_with(model: @job, data: { controller: "validations", action: "submit->validations#validateJob", validations_target: "form" }) do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="container-fluid py-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %> 
    <%= tag.label for: :title, class: "error my-2" %>
  </div>

  <div class="container-fluid py-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, class: "form-control" %>
    <%= tag.label for: :description, class: "error" %>
  </div>  

  <div class="container-fluid py-3">
    <%= f.label :employment_type_id, class: "form-label" %>
    <%= f.select :employment_type_id, options_for_select(@employment_types.collect { |et| [et.name, et.id] }), class: "form-control", prompt: "Select Employment Type" %>
    <%= tag.label for: :employment_type_id, class: "error my-2" %>
  </div>

  <div class="container-fluid py-3">
    <%= f.label :industry_id, class: "form-label" %>
    <%= f.select :industry_id, options_for_select(@industries.collect { |ind| [ind.name, ind.id] }), class: "form-control", prompt: "Select Industry" %>
  </div>

  <div class="mt-3">
    <%= f.submit "Save as Draft", name: "draft", class: "btn btn-dark" %>
    <%= f.submit "Publish", name: "publish", class: "btn btn-dark" %>
    <%= link_to "Cancel", jobs_path, class: "btn btn-dark" %>
  </div>
<% end %>
   
